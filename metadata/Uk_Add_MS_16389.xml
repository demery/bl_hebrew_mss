                     <title xml:lang="he">חבור ברפואה</title>
                     
                     
                     
                     <note>
                        
                        
                        
                        <p>A brief (and incomplete) work on medicine. </p>
                     
                     
                     
                     </note>
                  
                  
                  
                  </msItem>
                  
                  
                  
                  <msItem rend="">
                     
                     
                     
