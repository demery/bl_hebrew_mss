						<textLang mainLang="he" otherLangs="jrb"> </textLang>
						<msItem n="0" rend="visible" class="lccn.loc.gov/n79090052">
							<locus from="1r" to="70v"/>
							<title xml:lang="he-Latn-x-lc">Sidur</title>
							<title xml:lang="he">סדור</title>
						</msItem>
						<msItem rend="">
							<locus from="1r" to="50v"/>
							<title xml:lang="en">Services for Sabbath</title>
							<note>
								<p>The ritual for lel Shabat begins on folio 1r; tefilat shaḥarit de-Shabat begins on folio 16v; tefilat musaf begins on folio 48v.</p>
							</note>
						</msItem>
						<msItem rend="">
							<locus from="51r" to="70v"/>
							<title xml:lang="en">Miscellaneous offices</title>
							<note>
