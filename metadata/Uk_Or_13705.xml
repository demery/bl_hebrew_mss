               <physDesc rend="visible">
                  
                  
                  
                  <p>Parchment codex of the 13th century. </p>
                  
                  
                  
                  <objectDesc form="codex">
                     
                     
                     
                     <supportDesc material="perg">
                        
                        
                        
                        <support>Parchment. </support>
                        
                        
                        
                        <extent>421 folios<dimensions type="leaf" unit="mm">
                              
                              
                              
                              <height>260</height>
                              
                              
                              
                              <width>190</width>
                           
                           
                           
