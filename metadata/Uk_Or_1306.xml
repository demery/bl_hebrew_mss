                     <author>
                        
                        
                        
                        <persName key="viaf.org/viaf/41078232" xml:lang="en">Qalonymos ben Qalonymos ben Meʼir, 1286-</persName>
                        
                        
                        
                        <persName xml:lang="he" key="viaf.org/viaf/41078232">קלונימוס בן קלונימוס</persName>
                     
                     
                     
                     </author>
                  
                  
                  
