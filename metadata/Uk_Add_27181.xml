						<msItem rend="visible" class="lccn.loc.gov/sh85113223">
							<locus from="1r" to="50v"/>
							<title xml:lang="he-Latn-x-lc">Teshuvot ha-ge᾿onim</title>
							<title xml:lang="he">תשובות הגאונים</title>
							<note>
