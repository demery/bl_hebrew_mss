               <msContents class="lccn.loc.gov/sh85009019" rend="visible">
                  
                  
                  
                  <summary>Astronomical work.</summary>
                  
                  
                  
                  <textLang mainLang="he" otherLangs="yi-Hebr de"/>
                  
                  
                  
                  <msItem rend="">
                     
                     
                     
